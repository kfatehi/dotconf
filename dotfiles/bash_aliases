case `uname` in
  Darwin)
    #export PATH="$HOME/.conf/bin:$PATH"
    alias ls="ls -G"
    alias lsblk="diskutil list"
    alias gitk="gitx"
    alias gitg="gitx"
    alias uci-vpn="sudo openconnect --authgroup=UCI --user=kfatehi vpn.uci.edu"
    alias xpra="/Applications/Xpra.app/Contents/MacOS/Xpra"
    alias vnc-share="echo \"open vnc://$(hostname)\" | pbcopy"
    ;;
  Linux)
    alias ls='ls --color=auto'
    alias pbcopy="xclip -selection PRIMARY"
    alias pbpaste="xclip -o -selection PRIMARY"
    alias gitk="gitg &"
    alias gitx="gitg &"
    alias uci-vpn="pass uci/kfatehi | sudo openconnect --authgroup=UCI --user=kfatehi vpn.uci.edu"
    ;;
esac

